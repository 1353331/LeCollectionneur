        </DockPanel>
        <DockPanel Margin="10,10,10,10" Grid.Column="1" Grid.RowSpan="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Label HorizontalAlignment="Left">Items</Label>
                <Button Command="{Binding cmdToggleAjouterItem}" HorizontalAlignment="Right" Content="+" Height="20" Width="20" RenderTransformOrigin="3.615,0.487"  />
                <Button Name="btnSupprimerItem"  Command="{Binding cmdSupprimerItem}" Grid.Column="1" Grid.Row="1" Content="-" Height="20" Width="20" RenderTransformOrigin="3.615,0.487"></Button>
            </StackPanel>
            <DataGrid DockPanel.Dock="Bottom" ItemsSource="{Binding CollectionSelectionnee.ItemsCollection}" SelectedItem="{Binding ItemSelectionne}" HorizontalScrollBarVisibility="Disabled" AutoGenerateColumns="False" IsReadOnly="True"   Margin="10,10,10,10" VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Nom}" Header="Nom" Width="3*"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Type, StringFormat=yyyy-MM-dd}" Header="Type" Width="2*"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Condition}" Header="Condition" Width="2*"></DataGridTextColumn>
                    <DataGridTemplateColumn Header="Déplacer" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Name="btnDeplacer" Command="{Binding Path=DataContext.cmdDeplacerItem,ElementName=UCVueCollections}" >Déplacer</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

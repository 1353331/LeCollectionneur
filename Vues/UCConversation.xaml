<UserControl x:Class="LeCollectionneur.Vues.UCConversation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeCollectionneur.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="405" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="290"/>
            <RowDefinition/>
           
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        <Button Content="+" Grid.Column="1" Grid.Row="0" Height="25" Width="50" Name="btnAjouterConversation" Click="btnAjouterConversation_Click"/>

        <ListBox Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" ItemsSource="{Binding MesConversation }" SelectedItem="{Binding UtilisateurSelectionner }"  >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding NomUtilisateur}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <TextBox Grid.Row="2" Grid.Column="2"/>
        <Button Content="Envoyer" Grid.Column="3" Grid.Row="3" Height="50" Width="100" Name="btnEnvoyer"/>

        <TextBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" IsReadOnly="True"/>
        
    </Grid>
</UserControl>

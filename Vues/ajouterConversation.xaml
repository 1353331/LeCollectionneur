<Window x:Class="LeCollectionneur.Vues.ajouterConversation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeCollectionneur.Vues"
        mc:Ignorable="d"
        Title="Le Collectionneur - Communiquer" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox Name="txbRecherche" Height="30" ></TextBox>
        <Button x:Name="btnRecherche" Click="btnRecherche_Click" Grid.Column="1" Width="100" Height="30" Content="Rechercher"></Button>
        <DataGrid Grid.Row="1" Grid.ColumnSpan="2"></DataGrid>
    </Grid>
</Window>
